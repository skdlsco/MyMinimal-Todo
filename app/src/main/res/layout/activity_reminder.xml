<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="com.example.eka.myminimal_todo.Activity.ReminderActivity">
    <LinearLayout
        android:layout_weight="3.5"
        android:weightSum="3.5"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:weightSum="10"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="2.8"
                android:paddingLeft="13sp"
                android:gravity="left|center_vertical"
                android:textSize="23sp"
                android:textColor="#fff"
                android:text="Minimal"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Space
                android:layout_weight="5.5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/reminder_done"
                android:layout_weight="1.7"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_check_24dp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/reminder_contents"
            android:textColor="#fff"
            android:textSize="23sp"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="5.5"
        android:background="#383838"
        android:layout_weight="5.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:weightSum="10"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:padding="3dp"
                android:src="@drawable/ic_snooze_24dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="2.5"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:textSize="19sp"
                android:textColor="#fff"
                android:text="Snooze"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Space
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/reminder_spinner"
                android:layout_marginRight="16dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </fr.ganfra.materialspinner.MaterialSpinner>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/reminder_remove"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="17sp"
        android:text="REMOVE"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>
